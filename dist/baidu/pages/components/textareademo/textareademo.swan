<c-page title="textarea" class=" cml-view cml-c-page">
    <view class="page-demo  cml-base cml-view">
        <view class="input-wrap  cml-base cml-view">
            <text class="title-text  cml-base cml-text">focus聚焦</text>
            <c-textarea cstyle="width: 400cpx" placeholder="focus聚焦 web端不支持自动" focus="{{isfocus}}" bindblur="_cmlEventProxy" data-eventblur="{{['bindblurevent']}}" bindfocus="_cmlEventProxy" data-eventfocus="{{['bindfocusevent']}}" bindinput="_cmlEventProxy" data-eventinput="{{['bindinputevent']}}" bindconfirm="_cmlEventProxy" data-eventconfirm="{{['bindconfirmevent']}}" class=" cml-view cml-c-textarea"></c-textarea>
        </view>
        <view class="input-wrap  cml-base cml-view">
            <text class="title-text  cml-base cml-text">数据绑定,value:{{inputValue}}</text>
            <c-textarea placeholder="数据绑定" value="{{inputValue}}" bindinput="_cmlEventProxy" data-eventinput="{{['inputEvent']}}" class=" cml-view cml-c-textarea"></c-textarea>
        </view>
        <view class="input-wrap  cml-base cml-view">
            <text class="title-text  cml-base cml-text">监听input事件,当前事件：{{eventName}}</text>
            <c-textarea placeholder="监听textarea事件" bindinput="_cmlEventProxy" data-eventinput="{{['testEvent']}}" bindblur="_cmlEventProxy" data-eventblur="{{['testEvent']}}" bindfocus="_cmlEventProxy" data-eventfocus="{{['testEvent']}}" bindconfirm="_cmlEventProxy" data-eventconfirm="{{['testEvent']}}" class=" cml-view cml-c-textarea"></c-textarea>
        </view>
        <view class="input-wrap  cml-base cml-view">
            <text class="title-text  cml-base cml-text">最大长度是5</text>
            <c-textarea placeholder="最大长度是5" maxlength="{{5}}" class=" cml-view cml-c-textarea"></c-textarea>
        </view>
        <view class="input-wrap  cml-base cml-view">
            <text class="title-text  cml-base cml-text">禁用textarea</text>
            <c-textarea placeholder="禁用textarea" disabled="{{true}}" class=" cml-view cml-c-textarea"></c-textarea>
        </view>
        <view class="input-wrap  cml-base cml-view">
            <text class="title-text  cml-base cml-text">键盘右下键按钮done</text>
            <c-textarea placeholder="键盘右下键按钮done" return-key-type="done" class=" cml-view cml-c-textarea"></c-textarea>
        </view>
        <view class="input-wrap  cml-base cml-view">
            <text class="title-text  cml-base cml-text">placeholderColor web端不支持</text>
            <c-textarea placeholder="placeholderColor web端不支持" placer-holder-color="#ff0000;" class=" cml-view cml-c-textarea"></c-textarea>
        </view>
        <view class="end-item  cml-base cml-view">
            <text class="title-text  cml-base cml-text">自定义样式</text>
            <c-textarea placeholder="自定义样式" c-style="color: #00ff00; border: 1px solid #00f;" class=" cml-view cml-c-textarea"></c-textarea>
        </view>  
    </view>
</c-page>