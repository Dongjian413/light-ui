<c-page title="button" class=" cml-view cml-c-page">
    <c-scroller height="{{-1}}" class=" cml-view cml-c-scroller">
      <view class=" cml-base cml-view">
        <c-button class="g-main-btn  cml-view cml-c-button" type="blue" text="{{''}}" disabled="{{false}}" btn-style="background-color:red;" width="{{300}}" btn-hover-style="background-color:green;" text-style="color:black;" text-hover-style="color:pink" bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}">
          <text style="color:blue" class=" cml-base cml-text">确定</text>
        </c-button>
      </view>
      <c-header title="button" class=" cml-view cml-c-header"></c-header>
      <view class="section-title  cml-base cml-view">
        <text class="section-title-text  cml-base cml-text">类型样式</text>
      </view>
      <view class="button-list  cml-base cml-view">
        <text class="button-text  cml-base cml-text">default/blue</text>
        <c-button bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}" text="按钮" class=" cml-view cml-c-button"></c-button>

        <text class="button-text  cml-base cml-text">disabled</text>
        <c-button type="blue" text="确定" disabled="{{true}}" bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}" class=" cml-view cml-c-button">
        </c-button>

        <text class="button-text  cml-base cml-text">orange</text>
        <c-button type="orange" text="确定" bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}" class=" cml-view cml-c-button">
        </c-button>

        <text class="button-text  cml-base cml-text">red && disabled</text>
        <c-button type="red" text="确定" disabled="{{true}}" bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}" class=" cml-view cml-c-button">
        </c-button>

        <text class="button-text  cml-base cml-text">white</text>
        <c-button type="white" text="确定" bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}" class=" cml-view cml-c-button">
        </c-button>
      </view>

      <view class="section-title  cml-base cml-view">
        <text class="section-title-text  cml-base cml-text">尺寸</text>
      </view>
      <view class="button-list button-list-auto  cml-base cml-view">
        <text class="button-text  cml-base cml-text">stretch && white && disabled</text>
        <c-button bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}" size="stretch" disabled="{{true}}" type="white" class=" cml-view cml-c-button">确定</c-button>

        <text class="button-text  cml-base cml-text">auto</text>
        <c-button type="green" text="确定" size="auto" bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}" class=" cml-view cml-c-button">
        </c-button>

        <text class="button-text  cml-base cml-text">small</text>
        <c-button type="red" text="确定" size="small" disabled="{{false}}" bindonclick="_cmlEventProxy" data-eventonclick="{{['testclick']}}" class=" cml-view cml-c-button">
        </c-button>
      </view>
    </c-scroller>
</c-page>