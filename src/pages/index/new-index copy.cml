    comLogoSrc: require(`../../assets/images/component/kind/logo.png`),
    apiLogoSrc: require(`../../assets/images/api/kind/logo.png`),
    activeTab: "component",
    arrowIcon: "https://gw.alicdn.com/tfs/TB11zBUpwMPMeJjy1XbXXcwxVXa-22-22.png"
  }

  computed = {
    scrollerStyl() {
      return this.winHeight ? `height: ${this.winHeight}cpx;` : ''
    },
    computedStyle() {
      let transVal = this.activeTab === "api" ? "-750" : "0";
      let styl = `transform: translateX(${transVal}cpx)`;

      return styl;
    },
    bodyComputedStyl() {
      let styl = "";
      return styl;
    },
    activeComps(){
      return this.comList[this.activeIndex].pages;
    }
  }

  watch  = {
  }

  methods = {
    handleTap(index){
      this.activeIndex = index;
    },
    routeTo(path) {
      console.log(path)
      cml.navigateTo({
        path
      });
    }
  }

  beforeCreate() {
  }

  created() {
    
  }

  beforeMount() {
  }

  mounted() {
    // setTimeout(() => {
    //   cml.navigateTo({
    //     path: "/pages/COMP/light-button/light-button"
    //   })
    // }, 2000);
    cml.getSystemInfo().then((info)=>{
      this.winHeight = info.viewportHeight
    })
  }

  beforeDestroy() {
  }

  destroyed() {
  }
}

export default new Demo();
</script>
