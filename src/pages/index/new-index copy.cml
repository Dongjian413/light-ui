        cid: "nav",
        name: "弹层",
        open: false,
        pages: [
          routeObj["light-halfscreen"],
          routeObj["light-fullscreen"],
          routeObj["light-actionsheetlist"],
          routeObj['light-popup'],
          routeObj['light-alert'],
          routeObj['light-toast'],
          routeObj['light-noticetips'],
          routeObj['light-bartips'],
